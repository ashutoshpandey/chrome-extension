{
    "manifest_version": 3,
    "name": "URL Shortcut Extension",
    "version": "1.0",
    "description": "Redirect to predefined URLs using shortcuts.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "omnibox": {
        "keyword": "df"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}